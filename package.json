{
	"name": "epsibot",
	"version": "2.5.0",
	"description": "Light discord bot for epsilon needs",
	"main": "built/main.js",
	"scripts": {
		"prettier": "prettier -w .",
		"eslint": "eslint --fix src/",
		"check": "npm run prettier && npm run eslint",
		"build": "rm -rf built/ && npm run check && tsc && echo 'Build finished'",
		"start": "npm run build && clear && npm run start:builded",
		"clean": "rm -rf built/ logs/",
		"migrate": "typeorm migration:run",
		"start:builded": "node --enable-source-maps -r dotenv/config built/main.js",
		"test": "echo 'Sorry, there is no tests for now'"
	},
	"private": true,
	"author": "EpsiTeam",
	"license": "ISC",
	"type": "module",
	"dependencies": {
		"discord.js": "14.6.0",
		"typescript": "4.9.3",
		"typeorm": "0.3.10",
		"better-sqlite3": "7.6.2",
		"@types/node": "18.11.9",
		"chalk": "5.1.2",
		"date-fns": "2.29.3",
		"dotenv": "16.0.3",
		"reflect-metadata": "0.1.13"
	},
	"devDependencies": {
		"eslint": "8.28.0",
		"prettier": "2.8.0",
		"@typescript-eslint/eslint-plugin": "5.44.0",
		"@typescript-eslint/parser": "5.44.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-import": "2.26.0"
	},
	"overrides": {
		"discord-api-types": "0.37.14"
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"trailingComma": "none"
	}
}
