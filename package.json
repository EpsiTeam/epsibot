{
	"name": "epsibot",
	"version": "1.3.0",
	"description": "Light discord bot for epsilon needs",
	"main": "built/index.js",
	"scripts": {
		"build": "rm -rf built/ && tsc",
		"knex": "knex --knexfile built/knexfile.js",
		"migrate": "npm run knex migrate:latest",
		"update": "npm run build && npm run migrate && npm up",
		"start": "npm run build && node built/index.js",
		"prod": "npm run build && NODE_ENV=production node built/index.js",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"private": true,
	"author": "EpsiTeam",
	"license": "ISC",
	"dependencies": {
		"discord.js": "^12.5.1",
		"epsicommands": "epsiteam/epsicommands",
		"epsiconfirm": "epsiteam/epsiconfirm",
		"epsilist": "epsiteam/epsilist",
		"epsilogging": "epsiteam/epsilogging",
		"epsimpleembed": "epsiteam/epsimpleembed",
		"knex": "^0.95.2",
		"sqlite3": "^5.0.2"
	},
	"devDependencies": {
		"@types/node": "^14.14.35",
		"@types/table": "^6.0.0",
		"@types/ws": "^7.4.0",
		"typescript": "^4.2.3"
	}
}
