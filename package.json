{
	"name": "epsibot",
	"version": "1.4.0",
	"description": "Light discord bot for epsilon needs",
	"main": "built/index.js",
	"scripts": {
		"clean": "rm -rf built/",
		"prebuild": "npm run clean",
		"build": "tsc",
		"migrate": "knex migrate:latest",
		"preupdate": "npm up",
		"update": "npm run migrate && npm run build",
		"prestart": "npm run build",
		"start": "node built/index.js",
		"preprod": "npm run build",
		"prod": "NODE_ENV=production node built/index.js",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"private": true,
	"author": "EpsiTeam",
	"license": "ISC",
	"dependencies": {
		"discord.js": "^12.5.1",
		"epsicommands": "epsiteam/epsicommands",
		"epsiconfirm": "epsiteam/epsiconfirm",
		"epsilist": "epsiteam/epsilist",
		"epsilogging": "epsiteam/epsilogging",
		"epsimpleembed": "epsiteam/epsimpleembed",
		"knex": "^0.95.2",
		"sqlite3": "^5.0.2"
	},
	"devDependencies": {
		"@types/node": "^14.14.35",
		"@types/table": "^6.0.0",
		"@types/ws": "^7.4.0",
		"typescript": "^4.2.3"
	}
}
