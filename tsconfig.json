{
	"compilerOptions": {
		"outDir": "./built",
		"allowJs": true,
		"target": "ES2020",
		"module": "CommonJS",
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"resolveJsonModule": true
	},
	"include": ["./src/**/*"]
}
