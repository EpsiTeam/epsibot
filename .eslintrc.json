{
	"env": {
		"browser": false,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"import"
	],
	"rules": {
		// Rules that result in an error:
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"semi-spacing": "error",
		"no-trailing-spaces": ["error"],
		"no-var": "error",
		"object-curly-spacing": ["error", "always"],
		"comma-dangle": ["error"],
		"comma-spacing": "error",
		"comma-style": "error",
		"eol-last": "error",
		// Rules that result in a warning:
		"prefer-const": "warn",
		"import/extensions": ["error", "always"],
		"max-len": ["warn", {
			"ignoreStrings": true,
			"ignoreTemplateLiterals": true
		}]
	}
}
