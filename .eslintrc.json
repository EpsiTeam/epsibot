{
	"env": {
		"browser": false,
		"node": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint", "import"],
	"rules": {
		// Rules that result in an error:
		"no-var": "error",
		"import/extensions": ["error", "always"],
		// Rules that result in a warning:
		"prefer-const": "warn"
	},
	"ignorePatterns": ["built/**"]
}
